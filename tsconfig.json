{
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"],
      "*": ["types/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* env localhost */
    "types": ["vite/finance-dashboard-client"]
    // "typeRoots": ["./node_modules/vite"]
  },
  "include": [
    "src",
    "theme.ts",
    "src/**/*.d.ts",
    "../finance-dashboard-server/src/app/data/data.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
